<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <title>
        <%= title %>
    </title>
    <style>
        nav {
            position: fixed !important;
            top: 0;
            left: 0;
            right: 0;
            z-index: 9999;
        }
    </style>
</head>

<body>
    <div class="container">
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="./nations">
                    <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                    data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-menu">
                <div class="navbar-start">
                    <a href="/nations" class="navbar-item">
                        Nation
                    </a>

                    <a href="/players" class="navbar-item">
                        Player
                    </a>
                </div>
            </div>
            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="button button is-success" data-target="#createPlayer">Create nation</div>
                </div>
            </div>
        </nav>
        <div class="columns" style="margin-top: 5rem">
            <div class="column">
                <table class="table">
                    <thead>
                        <tr>
                            <!-- <th>Image</th> -->
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% nations.forEach(function(nation){ %>
                            <tr>
                                <!-- <td>
                                    <figure class="image is-64x64">
                                        <img src=<%=nation.image %> >
                                    </figure>
                                </td> -->
                                <td>
                                    <%= nation.name %>
                                </td>
                                <td>
                                    <%= nation.description %>
                                </td>
                                <td>
                                    <!-- <i class="fas fa-ellipsis-v"></i> -->
                                    <!-- <div class="buttons are-small">
                                        <a href="nations/edit/<%= nation._id %>"><button
                                                class="button is-warning is-light">Edit</button></a>
                                        <a href="nations/delete/<%= nation._id %>"><button
                                                class="button is-danger is-light">Delete</button></a>
                                    </div></a> -->
                                    <div class="buttons are-small">
                                        <button class="button" onclick="showHideButton('<%= nation.id %>');">
                                            ...
                                        </button>
                                        <div id="<%= nation.id %>" style="display: none;">
                                            <a href="nations/edit/<%=nation.id%>">
                                                <button class="button is-primary is-outlined"><span class="icon">
                                                        <i class="fas fa-edit"></i>
                                                    </span>
                                                    <span>Edit</span>
                                                </button></a>
                                            <a href="nations/delete/<%=nation.id%>"
                                                onclick="return confirm('Are you sure you want to delete this nation?')"
                                                style="margin-left: 5px;">
                                                <button class="button is-danger is-outlined"><span class="icon">
                                                        <i class="fas fa-trash"></i>
                                                    </span><span>Delete</span>
                                                </button></a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% })%>
                    </tbody>
                </table>
            </div>
            <div class="column">
                <form method="post">
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Name</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-info" name="name" type="text" placeholder="e.g. Brazil"
                                        required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Description</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-info" name="description" type="text" placeholder="Dream team"
                                        required>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label"></label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <button class="button is-primary" type="submit">
                                        Create
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <div id="myModal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <form method="post">
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Name</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input class="input is-info" name="name" type="text" placeholder="e.g. Brazil" required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Description</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input class="input is-info" name="description" type="text" placeholder="Dream team"
                                    required>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label"></label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary" type="submit">
                                    Create
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>

    <script>
        const modalButton = document.querySelector('[data-target="#createPlayer"]');
        const modal = document.querySelector('#myModal');
        modalButton.addEventListener('click', () => {
            modal.classList.toggle('is-active');
        });
        modal.querySelector('.modal-close').addEventListener('click', () => {
            modal.classList.toggle('is-active');
        });
    </script>

<script>
    //With a function, I am able to perform multiple tasks 
    function showHideButton(getId) {
      var button = document.getElementById(getId);

      if (button.style.display === "none") {
        button.style.display = "block";

      } else {
        button.style.display = "none";

      }
    }
  </script>
</body>

</html>