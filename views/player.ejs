    <div class="container">
        <div class="columns">
            <div class="column">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Club</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% players.forEach(function(player){ %>
                            <tr>
                                <td>
                                    <figure class="image is-64x64">
                                        <img src=<%=player.image %> >
                                    </figure>
                                </td>
                                <td>
                                    <%= player.name %>
                                </td>
                                <td>
                                    <%= player.club %>
                                </td>
